@model IEnumerable<PruebaTecnica.Models.Autore>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="text-center">Lista de Autores</h1>

    <div class="mb-3 text-right">
        <a class="btn btn-primary" asp-action="Create">Crear Autor</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AutorId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
