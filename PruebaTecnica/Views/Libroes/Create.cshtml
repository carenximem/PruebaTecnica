@model PruebaTecnica.Models.Libro

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="text-center">Crear Nuevo Libro</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del libro" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AutorId" class="control-label"></label>
                    <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId">
                        <option value="">Seleccione un autor</option> 
                    </select>
                    <span asp-validation-for="AutorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
